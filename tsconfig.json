{
  "compilerOptions": {
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "inlineSources": true,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "es5",
    "lib": [
      "esnext",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "./types/*"
      ],
      "@qcloud-apaas/web-sdk": ["."]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/__tests__"
  ]
}
